@model IEnumerable<rivarola_riquelme_rastrilla.Models.Contratos>

@{
    ViewData["Title"] = "Contratos";
}

<div>
    <h1 class="display-5">Lista de Contratos</h1>
</div>

<p>
    <a href="/Contrato/AltaContrato" class="btn btn-custom">Crear Contrato</a>
</p>

<table class="table text-center">
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Monto)</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Finalizaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Inquilino/Details/@item.Inquilino_dni" style="color:#C0392B;">@item.Inquilino.Nombre @item.Inquilino.Apellido</a>
                </td>
                <td>
                    <a href="/Inmueble/Details/@item.Inmueble_id" style="color:#C0392B;">@item.Inmueble.Direccion</a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>$@Html.DisplayFor(modelItem => item.Monto)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha_inicio)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha_fin)</td>
                <td>
                    <a href="/Contrato/Delete/@item.Id" class="me-2"><i class="fa-solid fa-trash ic-sz ic-color"></i></a>
                    <a href="/Contrato/Editar/@item.Id" class="me-2"><i class="fa-solid fa-pencil ic-sz ic-color"></i></a>
                    <a href="/Contrato/Details/@item.Id"><i class="fa-solid fa-circle-info ic-sz ic-color"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
