@model rivarola_riquelme_rastrilla.Models.Pago

@{
    ViewData["Title"] = "Crear Pago";
}

<h2>Crear Pago</h2>

<form asp-action="Crear">
    <div class="form-group">
        <label asp-for="Contrato_id" class="control-label"></label>
        <select asp-for="Contrato_id" class="form-control">
            <option value="">Seleccione un contrato</option>
            @foreach (var contrato in ViewBag.Contratos as IEnumerable<rivarola_riquelme_rastrilla.Models.Contratos>)
            {
                <option value="@contrato.Id">@contrato.Id</option>
            }
        </select>
        <span asp-validation-for="Contrato_id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha_pago" class="control-label"></label>
        <input asp-for="Fecha_pago" class="form-control" type="date" />
        <span asp-validation-for="Fecha_pago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Detalle" class="control-label"></label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Importe" class="control-label"></label>
        <input asp-for="Importe" class="form-control" />
        <span asp-validation-for="Importe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-custom" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
